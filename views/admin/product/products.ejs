<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>
        <div class="form-create">
            <div class="card-body">
                <h1 class="card-title">Produtos</h1>
                <hr>
                <form id="pesquisa" action="/admin/produtos" method="get" class="d-flex" role="search">
                    <input class="form-control me-2" type="search" id="produto" name="produto"
                        placeholder="Pesquisar produtos" aria-label="Search">

                    <button class="btn btn-outline-success" style="width: 25em;" type="submit">Pesquisar</button>

                    <a class="btn btn-success ms-2" style="width:15em" href="/admin/produto/novo">Novo</a>
                </form>
            </div>
        </div>

        <div class="card form-create">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Preço</th>
                        <th>Quantidade</th>
                        <th>Referência</th>
                        <th>Categoria</th>
                    </tr>
                </thead>
                <tbody>
                    <% produtos.forEach(produto=> { %>
                        <tr>
                            <td>
                                <%= produto.id %>
                            </td>
                            <td>
                                <%= produto.nome %>
                            </td>
                            <td>
                                R$ <%= produto.preco %>
                            </td>
                            <td>
                                <%= produto.quantidade %> unidades
                            </td>
                            <td>
                                <%= produto.referencia %>
                            </td>
                            <td>
                                <%= produto.categoria%>
                            </td>
                            <th>
                                <!--   <a class="btn btn-warning" href="/admin/articles/edit/<%= //article.id %>">Editar</a>
                            <form action="/articles/delete" method="post" style="display: inline;"
                                onsubmit="confirmarDelecao(event, this)">
                                <input type="hidden" name="id" value="<%= //article.id %>">
                                <button class="btn btn-danger">Deletar</button> -->
                                </form>
                            </th>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>




        <%- include('../../partials/footer.ejs') %>