<%- include('../../partials/storeheader.ejs') %>
  <!-- Background image -->
  <div class="p-5 text-center bg-image shadow-1-strong" style="
  background-image: url('/images/banner.jpg');
  height: 70vh;
">
    <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
      <div class="d-flex justify-content-center align-items-center h-100">
        <div class="text-white">
          <h1 class="mb-3">Seja bem-vindo(a)</h1>
          <h4 class="mb-3">Conheça os nossos produtos</h4>
          <a class="btn btn-outline-light btn-lg" href="#!" role="button">Ver mais</a>
        </div>
      </div>
    </div>
  </div>
  <!-- Background image -->

  <main class="mt-5">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
        <div class="container-fluid">
          <h4><strong class="text-dark mr-2">Produtos: </strong></h4>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
            <form class="d-flex input-group w-auto">
              <input type="search" class="form-control" placeholder="Pesquise um produto" aria-label="Search" />
              <button class="btn btn-outline-primary" type="button" data-mdb-ripple-color="dark">
                Pesquisar
              </button>
            </form>
          </div>
        </div>
      </nav>
      <section class="text-center mb-4">
        <div class="row">
          <% produtos.forEach(produto=> { %>

            <div class="col-lg-4 col-md-12 mb-4">
              <div class="card">
                <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                  <img src="images/<%= produto.imagem %>" alt="<%= produto.nome %>" class="img-fluid" />
                  <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                  </a>
                </div>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= produto.nome %>
                  </h5>
                  <h6> R$<%= produto.preco %>
                  </h6>
                  <a href="#!" class="btn btn-primary">Adicionar ao carrinho</a>
                </div>
              </div>
            </div>
            <% }) %>

              <nav aria-label="...">
                <ul class="pagination pagination-circle d-flex justify-content-center">
                  <li class="page-item">
                    <a class="page-link">Anterior</a>
                  </li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item active" aria-current="page">
                    <a class="page-link" href="#">2 <span class="visually-hidden">(current)</span></a>
                  </li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item">
                    <a class="page-link" href="#">Próximo</a>
                  </li>
                </ul>
              </nav>

        </div>


      </section>



    </div>
  </main>
  <%- include('../../partials/storefooter.ejs') %>