<%- include('../../partials/storeheader.ejs') %>
  <!-- Background image -->
  <div class="p-5 text-center bg-image shadow-1-strong" style="
  background-image: url('/images/banner.jpg');
  height: 70vh;
">
    <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
      <div class="d-flex justify-content-center align-items-center h-100">
        <div class="text-white">
          <h1 class="mb-3">Seja bem-vindo(a)</h1>
          <h4 class="mb-3">Conheça os nossos produtos</h4>
          <a class="btn btn-light btn-lg" href="#!" role="button">Ver mais</a>
        </div>
      </div>
    </div>
  </div>
  <!-- Background image -->
  <main class="mt-5">
    <div class="container">
      <section class="text-center mb-4">
        <div class="row">
          <% produtos.forEach(produto=> { %>
            <div class="col-md-4">
              <form style="width:100%" action="/add-cart/<%= produto.id %>" method="post">

                <input type="hidden" name="productImage" class="form-control" id="imagem-produto"
                  value="<%= produto.image%>">

                <input type="hidden" name="productName" class="form-control" id="nome-produto"
                  value="<%= produto.name%>">

                <input type="hidden" name="productPrice" class="form-control" id="preco-produto"
                  value="<%= produto.price%>">

                <input type="hidden" name="productDescription" id="descricao-produto" value="<%= produto.description%>">

                <input type="hidden" name="productReference" class="form-control" id="referencia-produto"
                  value="<%= produto.reference%>">

                <input name="productCategory" type="hidden" class="form-control" id="categoria"
                  value="<%= produto.category%>">

                <div class="mb-4">


                  <div class="card">
                    <div class="bg-image hover-overlay ripple" style="height: 13em;" data-mdb-ripple-color="light">
                      <a href="/item/<%= produto.id%>">
                        <img style="width: 12em;margin-top: 1em;" src="images/<%= produto.image %>"
                          alt="<%= produto.name %>" class="img-fluid" /> </a>

                    </div>

                    <div class="card-body">
                      <h5 class="card-title">
                       <a href="/item/<%= produto.id%>"><%= produto.name %></a>
                      </h5>
                      <h6><a href="/item/<%= produto.id%>">R$<%= produto.price %></a>
                      </h6>

                      <button type="submit" class="add-cart btn btn-primary">Adicionar ao carrinho</button>
                    </div>
                  </div>
                </div>

              </form>
            </div>
            <% }) %>
        </div>
    </div>

    <nav aria-label="...">
      <ul class="pagination pagination-circle d-flex justify-content-center">
        <li class="page-item">
          <a class="page-link">Anterior</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item active" aria-current="page">
          <a class="page-link" href="#">2 <span class="visually-hidden">(current)</span></a>
        </li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
          <a class="page-link" href="#">Próximo</a>
        </li>
      </ul>
    </nav>

    </div>


    </section>



    </div>
  </main>
  <%- include('../../partials/storefooter.ejs') %>